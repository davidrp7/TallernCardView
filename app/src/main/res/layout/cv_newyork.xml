<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:background="@drawable/libertad">

        <TextView
            android:id="@+id/tv_ny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_ny2"
            android:layout_below="@id/tv_ny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_ny3"
            android:layout_below="@id/tv_ny2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31ยบ"
            android:textSize="50sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/iv_ny"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_ny3"
            android:layout_alignBottom="@id/tv_ny3"
            android:background="@drawable/umbrella"/>

        <TextView
            android:layout_toRightOf="@id/iv_ny"
            android:layout_alignBottom="@id/iv_ny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="31%"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/iv_ny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="18:38"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/asterisk"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>